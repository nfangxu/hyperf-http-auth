{
    "name": "fx/hyperf-http-auth",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "use auth in hyperf as in laravel",
    "autoload": {
        "psr-4": {
            "Fx\\HyperfHttpAuth\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.5",
        "ext-json": "*",
        "hyperf/cache": "~2.0.0",
        "hyperf/config": "~2.0.0",
        "hyperf/utils": "~2.0.0",
        "hyperf/framework": "~2.0.0",
        "hyperf/di": "~2.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "phpstan/phpstan": "^0.12",
        "hyperf/testing": "~2.0.0",
        "swoole/ide-helper": "^4.5"
    },
    "suggest": {
        "fx/eloquent-provider": "require fx/eloquent-provider(^2.0) to use eloquent user provider",
        "fx/session-guard": "require fx/session-guard(^2.0) to use session guard provider"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "analyze": "phpstan analyse --memory-limit 300M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Fx\\HyperfHttpAuth\\ConfigProvider"
        }
    }
}
